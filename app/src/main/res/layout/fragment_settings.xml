<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@drawable/test2"
    tools:context=".Settings.View.SettingsFragment">

    <View
        android:id="@+id/home_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_view_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/general_img"
        android:layout_width="@dimen/big_img_width"
        android:layout_height="@dimen/big_img_height"
        android:layout_margin="36dp"
        android:src="@drawable/settings_vector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/general_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/General"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintStart_toEndOf="@id/general_img"
        app:layout_constraintTop_toTopOf="@id/general_img"
        app:layout_constraintBottom_toBottomOf="@id/general_img"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/location_img"
        android:layout_width="@dimen/small_img_width"
        android:layout_height="@dimen/small_img_height"
        android:layout_marginTop="36dp"
        android:layout_marginStart="20dp"        android:src="@drawable/choose_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/general_img"
        />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/location"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintStart_toEndOf="@id/location_img"
        app:layout_constraintTop_toTopOf="@id/location_img"
        app:layout_constraintBottom_toBottomOf="@id/location_img"
        />
    <ImageView
        android:id="@+id/language_img"
        android:layout_width="@dimen/small_img_width"
        android:layout_height="@dimen/small_img_height"
        android:layout_marginTop="36dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/language"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/location_img"
        />

    <TextView
        android:id="@+id/language_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/language"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintStart_toEndOf="@id/language_img"
        app:layout_constraintTop_toTopOf="@id/language_img"
        app:layout_constraintBottom_toBottomOf="@id/language_img"
        />


    <View
        android:id="@+id/separate"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_margin="32dp"
        app:layout_constraintTop_toBottomOf="@id/language_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/black"

    />

    <ImageView
        android:id="@+id/units_img"
        android:layout_width="@dimen/big_img_width"
        android:layout_height="@dimen/big_img_height"
        android:layout_margin="36dp"
        android:src="@drawable/units"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separate"
        />

    <TextView
        android:id="@+id/units_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/units"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintStart_toEndOf="@id/units_img"
        app:layout_constraintTop_toTopOf="@id/units_img"
        app:layout_constraintBottom_toBottomOf="@id/units_img"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/temp_img_setting"
        android:layout_width="@dimen/small_img_width"
        android:layout_height="@dimen/small_img_height"
        android:layout_marginTop="36dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/temperature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/units_img"
        />

    <TextView
        android:id="@+id/temp_text_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/temp_text_settings"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintStart_toEndOf="@id/temp_img_setting"
        app:layout_constraintTop_toTopOf="@id/temp_img_setting"
        app:layout_constraintBottom_toBottomOf="@id/temp_img_setting"
        />
    <ImageView
        android:id="@+id/wind_img_settings"
        android:layout_width="@dimen/small_img_width"
        android:layout_height="@dimen/small_img_height"
        android:layout_marginTop="36dp"
        android:layout_marginStart="20dp"        android:src="@drawable/wind_speed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/temp_img_setting"
        />

    <TextView
        android:id="@+id/wind_text_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/wind_text_setting"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintStart_toEndOf="@id/wind_img_settings"
        app:layout_constraintTop_toTopOf="@id/wind_img_settings"
        app:layout_constraintBottom_toBottomOf="@id/wind_img_settings"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/location_text"
        app:layout_constraintBottom_toBottomOf="@id/location_text"
        android:layout_margin="20dp"
        >

        <AutoCompleteTextView
            android:id="@+id/location_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/loc_hint"
            android:inputType="none"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/language_text"
        app:layout_constraintBottom_toBottomOf="@id/language_text"
        android:layout_margin="20dp"
        >

        <AutoCompleteTextView
            android:id="@+id/language_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/lang_hint"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/temp_text_settings"
        app:layout_constraintBottom_toBottomOf="@id/temp_text_settings"
        android:layout_margin="20dp"
        >

        <AutoCompleteTextView
            android:id="@+id/temperature_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/temp_hint"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout4"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/wind_text_settings"
            app:layout_constraintBottom_toBottomOf="@id/wind_text_settings"
            android:layout_margin="20dp"
            >

            <AutoCompleteTextView
                android:id="@+id/wind_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/wind_hint"
                android:inputType="none" />



    </com.google.android.material.textfield.TextInputLayout>


</androidx.constraintlayout.widget.ConstraintLayout>